{
   "parser": "babel-eslint",
   "env": {
      "browser": true,
      "es6": true
   },
   "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
   ],
   "parserOptions": {
      "ecmaFeatures": {
         "experimentalObjectRestSpread": true,
         "jsx": true
      },
      "sourceType": "module"
   },
   "plugins": [
      "react"
    ],
    "rules": {
       "no-undef": "off",
       "indent": [
          "error",
          3
       ],
       "linebreak-style": [
          "error",
          "unix"
       ],
       "quotes": [
          "error",
          "double"
       ],
       "semi": [
          "error",
          "always"
       ]
    }
}
